@using OutOfOffice.Services.Repository
@model OutOfOffice.Models.ViewModels.EmployeeCreateViewModel
@inject IRepositoryService<Employee> _repository
@{
    OutOfOffice.Models.ViewModels.EmployeeCreateViewModel.HRManagers = new SelectList(_repository.GetAllRecords().Where(e => e.Position == "HR Manager").Select(e=>e.FullName));
}
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmployeeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subdivision" class="control-label"></label>
                @Html.DropDownListFor(model => model.Subdivision, OutOfOffice.Models.ViewModels.EmployeeCreateViewModel.Subdivisions, new{@class="form-control"})
                <span asp-validation-for="Subdivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                @Html.DropDownListFor(model => model.Position, OutOfOffice.Models.ViewModels.EmployeeCreateViewModel.Positions, new { @class = "form-control" })
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownListFor(model => model.Status, OutOfOffice.Models.ViewModels.EmployeeViewModel.StatusOptions, new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeoplePartner" class="control-label"></label>
                @Html.DropDownListFor(model => model.PeoplePartner, OutOfOffice.Models.ViewModels.EmployeeCreateViewModel.HRManagers, new { @class = "form-control" })
                <span asp-validation-for="PeoplePartner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutOfOfficeBalance" class="control-label"></label>
                <input asp-for="OutOfOfficeBalance" class="form-control" />
                <span asp-validation-for="OutOfOfficeBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
